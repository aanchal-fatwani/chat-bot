{
  "name": "chatbot",
  "version": "1.0.0",
  "description": "A chatbot application using Node, express and MongoDB",
  "main": "app.js",
  "scripts": {
    "start": "nodemon server.js",
    "start:prod": "set NODE_ENV=production && nodemon server.js",
    "index:css": "stylus -w ./public/styl/index.styl -o ./public/css/",
    "chat:css": "stylus -w ./public/styl/chat.styl -o ./public/css/",
    "build:css": "start npm run index:css && start npm run chat:css",
    "beautify:jade": "pug-beautifier -o ./views/chat.pug",
    "debug": "ndb server.js",
    "watch:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js",
    "watch:dev": "start npm run build:css && start npm run watch:js",
    "test": "mocha --timeout 15000 ./test/test.js"
  },
  "author": "Aanchal Fatwani",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "async": "^3.2.4",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-mongo-sanitize": "^1.3.2",
    "express-rate-limit": "^3.5.0",
    "helmet": "^3.16.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.2",
    "morgan": "^1.9.1",
    "pdfkit": "^0.13.0",
    "pug": "^2.0.3",
    "pug-beautifier": "^0.0.1",
    "slugify": "^1.3.4",
    "stylus": "^0.59.0",
    "validator": "^10.11.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "mocha": "^10.0.0",
    "nodemon": "1.18.11",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.0"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
