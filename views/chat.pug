extends base

block content
	.container
		input#botChatIcon(type='checkbox')
		label#chat-label(for='botChatIcon')
			.app-wrapper.app-responsive
			.closed(data-align='right')
			.bubble
				.icon--close
				svg.icon--chat(width='75%' height='75%' viewbox='0 0 30 33' fill='none' xmlns='http://www.w3.org/2000/svg' style='margin-top: 13px; padding: 6px;')
					path(fill-rule='evenodd' clip-rule='evenodd' d='M21.333 26.324l6.449 6.376a.752.752 0 001.28-.535V21.44l-7.729 4.884z' fill='#ffffff')
					path(d='M3.946 0h22.109a3.008 3.008 0 013.008 3.008V21.44l-7.624 5.004H3.945a3.008 3.008 0 01-3.007-3.008V3.008A3.008 3.008 0 013.946 0z' fill='#ffffff')
					path(fill-rule='evenodd' clip-rule='evenodd' d='M21.439 26.444L.937 4.981v21.463H21.44z' fill='url(#gradient)')
					defs
						lineargradient#gradient(x1='13.451' y1='12.325' x2='5.559' y2='22.297' gradientunits='userSpaceOnUse')
						stop(stop-color='#000000' stop-opacity='.2')
						stop(offset='1' stop-color='transparent' stop-opacity='0')
		.wrapper
			#app(data-align='right')
				.app-wrapper.app-responsive
					.opened(data-mobile='false')
						.chat
							.top(data-shadow='true')
								.avatar
									.tpl-avatar
										.tpl-avatar-image
											.lazy-img(data-status='loaded' data-cover='true')
												.bubble(style="width:60px; height:60px; margin:0")
													svg(width='75%' height='75%' viewbox='0 0 30 33' fill='none' xmlns='http://www.w3.org/2000/svg' style='margin-top: 10px; padding: 6px;margin-left:7px')
														path(fill-rule='evenodd' clip-rule='evenodd' d='M21.333 26.324l6.449 6.376a.752.752 0 001.28-.535V21.44l-7.729 4.884z' fill='#ffffff')
														path(d='M3.946 0h22.109a3.008 3.008 0 013.008 3.008V21.44l-7.624 5.004H3.945a3.008 3.008 0 01-3.007-3.008V3.008A3.008 3.008 0 013.946 0z' fill='#ffffff')
														path(fill-rule='evenodd' clip-rule='evenodd' d='M21.439 26.444L.937 4.981v21.463H21.44z' fill='url(#gradient)')
														defs
															lineargradient#gradient(x1='13.451' y1='12.325' x2='5.559' y2='22.297' gradientunits='userSpaceOnUse')
															stop(stop-color='#000000' stop-opacity='.2')
															stop(offset='1' stop-color='transparent' stop-opacity='0')

								.company
									.bot-name Bot

							.conversation
								.message.start.caption(data-type='CAPTION' data-bot='true' )
									.caption
										.caption-avatar
											.lazy-img(data-status='loaded' data-cover='true' )
												img.lazy-img-loaded(src='https://cdn.chatbot.com/widget/61f28451fdd7c5000728b4f9/FPBAPaZFOOqqiCbV.png' alt='' )

										span Bot
								.message.start(data-type='BOT_RESPONSE_text' data-bot='true' )
									.anchors.bot-response.text Hi.. What can I help you with? &#x1F60A;
									.message-date #{currentTime}
								.message.center.quick-replies(data-type='BOT_RESPONSE_quickReplies' data-bot='true' )
									.bot-response.quick-replies
										.quick-replies-buttons
											.single-button
												span#one I have questions 
											.single-button
												span#two Just exploring  

								.message.end.caption(data-type='CAPTION' data-user='true' )
									.caption
										span You
								.message.end(data-type='INPUT_BUTTON_GOTO' data-user='true')
									.input-wrapper.input-button-goto
										.anchors.input-wrapper-text(data-first='true') Just exploring &#x1F440;
									.message-date-wrapper
										.message-date 10:04 PM
							    
							.snippet#dot-typing
								.stage
									.dot-typing

							.typing
								input#text-inp(type='text' maxlength='256' placeholder='Type your message here..')
								.send-icon#mic-icon
									svg(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' xml:space='preserve')
										path(fill='#0066FF' d='M12 20l-5 4h10l-5-4zm4-9c0 2.209-1.791 4-4 4s-4-1.791-4-4v-7c0-2.209 1.791-4 4-4s4 1.791 4 4v7zm4-2v2c0 4.418-3.582 8-8 8s-8-3.582-8-8v-2h2v2c0 3.309 2.691 6 6 6s6-2.691 6-6v-2h2z')
								.send-icon#send-icon
									svg(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' xml:space='preserve' style='width:27px')
										path(fill='#d7d7d7' d='M22,11.7V12h-0.1c-0.1,1-17.7,9.5-18.8,9.1c-1.1-0.4,2.4-6.7,3-7.5C6.8,12.9,17.1,12,17.1,12H17c0,0,0-0.2,0-0.2c0,0,0,0,0,0c0-0.4-10.2-1-10.8-1.7c-0.6-0.7-4-7.1-3-7.5C4.3,2.1,22,10.5,22,11.7z')
